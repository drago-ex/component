{
	"name": "drago-ex/component",
	"type": "library",
	"description": "Bootstrap components such as modal and offcanvas.",
	"license": ["MIT"],
	"authors": [
		{
			"name": "Zdeněk Papučík",
			"homepage": "https://github.com/accgit"
		}
	],
	"require": {
		"php": ">=8.3 <9",
		"nette/application": "^3.1",
	  	"latte/latte": "^3.1"
	},
	"require-dev": {
		"tracy/tracy": "^2.10",
		"phpstan/phpstan-nette": "^1.2.9"
	},
	"autoload": {
		"classmap": ["src/"]
	},
	"extra": {
		"drago-project": {
			"install": {
				"copy": {
					"src/Drago/assets/latte": "app/Core/Widget"
				}
			}
		}
	},
	"scripts": {
		"phpstan": "phpstan analyse --level 5 --configuration tests/phpstan.neon src"
	}
}
